{
  "require": {
    "craftcms/cms": "3.5.6",
    "nystudio107/craft-twigpack": "1.2.5",
    "putyourlightson/craft-blitz": "3.6.7",
    "spacecatninja/imager-x": "v3.1.4",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
