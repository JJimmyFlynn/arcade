<!DOCTYPE html>
<html lang="{{ craft.app.language|slice(0, 2) }}" class="no-js">
  <head>
    {% block head %}
      {% include "_partials/head.twig" %}
    {% endblock %}
  </head>

  <body class="{{ body_class ?? "" }}">
    <a href="#mainContent" class="u-visually-hidden">Skip to main Content</a>
    <a href="#mainNav" class="u-visually-hidden">Skip to main navigation</a>
    {% block header %}
      {% include "_partials/header.twig" %}
    {% endblock %}

    <main role="main" id="mainContent" class="main">
      {% block content %}

      {% endblock %}
    </main>

    {% block footer %}
      {% include "_partials/footer.twig" %}
    {% endblock %}

    {% block bodyScripts %}

    {% endblock %}
    {{ craft.twigpack.includeJsModule("main.js", true) }}
  </body>
</html>
